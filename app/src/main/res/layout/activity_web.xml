<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.WebActivity">


    <WebView android:layout_width="0dp"
             android:layout_height="0dp"
             android:id="@+id/web_view"
             app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="210dp"
               android:foregroundGravity="center"
               android:id="@+id/image_view"
               android:background="@android:color/transparent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="272dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
               android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="@+id/web_view"
               app:layout_constraintStart_toStartOf="@+id/web_view" android:layout_marginStart="8dp"
               app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>